---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import { supabase } from "../supabase";
import Slideshow from "../components/Slideshow.astro";
import { Debug } from "astro:components";
import Bot from "../components/Bot.astro";

let { data: Building} = await supabase
	.from("Building")
	.select(`BUILDING_NAME, BUILDING_CODE`)
	.in('BUILDING_CODE', ['HH', 'YR', 'SC'])
---

<Layout title="Classroom Tours">
	<h1 class="text-lg">Buildings</h1>
	<div class="grid grid-cols-2 md:grid-cols-3 gap4">
		{
			Building?.map((b) => (
				<Card
					title={b.BUILDING_NAME}
					building={b.BUILDING_CODE}
				/>
			))
		}
	</div>
	<Bot/>
</Layout>


